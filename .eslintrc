{
  "root": true,
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module",
    "allowImportExportEverywhere": false
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/recommended"
  ],
  "plugins": [
    "vue",
    "html"
  ],
  "settings": {
    "html/html-extensions": [
      ".erb",
      ".handlebars",
      ".hbs",
      ".htm",
      ".html",
      ".mustache",
      ".nunjucks",
      ".php",
      ".tag",
      ".twig",
      ".we"
    ],
    "html/indent": "+2"
  }
}
